<div class="markdown">
  <slot />
</div>

<style is:global>
  .markdown
	:not(a, strong, em, del, span, input, code)
	+ :not(a, strong, em, del, span, input, code, :where(.not-content *)) {
	margin-top: 1rem;
}

/* Headings after non-headings have more spacing. */
.markdown
	:not(h1, h2, h3, h4, h5, h6)
	+ :is(h1, h2, h3, h4, h5, h6):not(:where(.not-content *)) {
	margin-top: 1.5em;
}

.markdown li + li:not(:where(.not-content *)),
.markdown dt + dt:not(:where(.not-content *)),
.markdown dt + dd:not(:where(.not-content *)),
.markdown dd + dd:not(:where(.not-content *)) {
	margin-top: 0.25rem;
}

.markdown li:not(:where(.not-content *)) {
	overflow-wrap: anywhere;
}

.markdown
	li
	> :last-child:not(li, ul, ol):not(a, strong, em, del, span, input, :where(.not-content *)) {
	margin-bottom: 1.25rem;
}

.markdown dt:not(:where(.not-content *)) {
	font-weight: 700;
}
.markdown dd:not(:where(.not-content *)) {
	padding-inline-start: 1rem;
}

.markdown :is(h1, h2, h3, h4, h5, h6):not(:where(.not-content *)) {
	color: var(--sl-color-white);
	line-height: var(--sl-line-height-headings);
	font-weight: 600;
}

.markdown :is(img, picture, video, canvas, svg, iframe):not(:where(.not-content *)) {
	display: block;
	max-width: 100%;
	height: auto;
}

.markdown h1:not(:where(.not-content *)) {
	font-size: var(--sl-text-h1);
}
.markdown h2:not(:where(.not-content *)) {
	font-size: var(--sl-text-h2);
}
.markdown h3:not(:where(.not-content *)) {
	font-size: var(--sl-text-h3);
}
.markdown h4:not(:where(.not-content *)) {
	font-size: var(--sl-text-h4);
}
.markdown h5:not(:where(.not-content *)) {
	font-size: var(--sl-text-h5);
}
.markdown h6:not(:where(.not-content *)) {
	font-size: var(--sl-text-h6);
}

.markdown a:not(:where(.not-content *)) {
	color: var(--sl-color-text-accent);
}
.markdown a:hover:not(:where(.not-content *)) {
	color: var(--sl-color-white);
}

.markdown code:not(:where(.not-content *)) {
	background-color: var(--sl-color-bg-inline-code);
	margin-block: -0.125rem;
	padding: 0.125rem 0.375rem;
	font-size: var(--sl-text-code-sm);
}
.markdown :is(h1, h2, h3, h4, h5, h6) code {
	font-size: inherit;
}

.markdown pre:not(:where(.not-content *)) {
	border: 1px solid var(--sl-color-gray-5);
	padding: 0.75rem 1rem;
	font-size: var(--sl-text-code);
	tab-size: 2;
}

.markdown pre code:not(:where(.not-content *)) {
	all: unset;
	font-family: var(--__sl-font-mono);
}

.markdown blockquote:not(:where(.not-content *)) {
	border-inline-start: 1px solid var(--sl-color-gray-5);
	padding-inline-start: 1rem;
}

.markdown table:not(:where(.not-content *)) {
	display: block;
	overflow: auto;
	border-collapse: collapse;
}
.markdown tr:nth-child(2n):not(:where(.not-content *)) {
	background-color: var(--sl-color-gray-7, var(--sl-color-gray-6));
}
.markdown :is(th, td):not(:where(.not-content *)) {
	border: 1px solid var(--sl-color-hairline-light);
	padding: 0.375rem 0.8125rem;
}

.markdown hr:not(:where(.not-content *)) {
	border: 0;
	border-bottom: 1px solid var(--sl-color-hairline);
}
</style>
