---
import type { GetStaticPaths } from "astro";
import type { CollectionEntry } from "astro:content";
import { getCollection } from "astro:content"
import Markdown from "../../components/markdown/Markdown.astro";
import Page from "../../layouts/Page.astro";
import { Header } from "../../components/header";


export const getStaticPaths: GetStaticPaths = async () => {
  const posts = await getCollection("blog");
  return posts.map(post => ({
    params: {
      slug: post.slug,
    },
    props: post,
  }));
}

type Props = CollectionEntry<"blog">;

const post = Astro.props;

const { Content } = await post.render();
---
<Page>
  <Header />
  <main>
    <div class="content">
      <h1>{post.data.title}</h1>
      <Markdown>
        <Content />
      </Markdown>
    </div>
  </main>
</Page>

<style>
  main {
    max-width: 960px;
    margin: 0 auto;
  }

  .content {
    display: flex;
    flex-direction: column;
    gap: 24px;
    margin: 96px 48px;
  }

  h1 {
    font-family: var(--text-display-medium-family);
    font-size: var(--text-display-medium-size);
    /* font-weight: var(--text-display-medium-weight); */
    font-weight: 500;
    line-height: var(--text-display-medium-line-height);
    letter-spacing: var(--text-display-medium-letter-spacing);
  }
</style>
